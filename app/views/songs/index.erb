<ul class="tracks">
	<% @songs.each do |song| %>
	<li class="track">
		<dl class="song">
			<dt>Title</dt>
			<dd><%= song.title %></dd>
			<dt>Author</dt>
			<dd><%= song.author %></dd>
			<% if song.url.nil? %>
			    <dt>URL</dt>
				<dd><a href="<%= song.url %>"><%= song.url %></a></dd>
			<% end %>
		</dl>
	</li>
	<% end %>
</ul>

<footer><a href="/songs/new">Add a new song!</a></footer>
